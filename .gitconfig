[user]
    email = mark.pio@cyber.gc.ca
    name = Mark Pio
[push]
    default = simple
[core]
    editor = nvim
[init]
    defaultBranch = main
[alias]
    # Basic shortcuts
    st = status
    co = checkout
    br = branch
    ci = commit
    cm = commit -m

    # Staging
    a = add
    aa = add --all
    ap = add --patch

    # Diff and show
    d = diff
    ds = diff --staged
    dt = difftool

    # Logs
    l = log --oneline
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --stat

    # Undo operations
    unstage = reset HEAD --
    undo = reset --soft HEAD~1

    # Branch operations
    brd = branch -d
    brD = branch -D

    # Remote operations
    f = fetch
    fa = fetch --all
    pl = pull
    ps = push
    psu = push -u origin HEAD

    # Stash operations
    ss = stash save
    sp = stash pop
    sl = stash list

    # Other useful commands
    last = log -1 HEAD
    amend = commit --amend --no-edit
    root = rev-parse --show-toplevel
